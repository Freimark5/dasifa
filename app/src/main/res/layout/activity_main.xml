<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue">

    <!-- Darkmode-Toggle-Button rechts oben ohne Rundung -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/dark_mode_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/moon_icon"
        android:backgroundTint="@color/light_blue"
        android:textColor="@color/icon_color"
        android:textSize="24sp"
        app:cornerRadius="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        android:padding="12dp"
        android:layout_margin="4dp" />

    <!-- Container für Schmarty, PieChart, Legende und Suchen-Button (max 40% Höhe) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/internal_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintTop_toBottomOf="@id/dark_mode_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Schmarty-Überschrift -->
        <TextView
            android:id="@+id/internal_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/internal_label"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Interner Speicher PieChart (kleiner) -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/internal_storage_chart"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:layout_constraintTop_toBottomOf="@id/internal_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Legende für internen Speicher -->
        <TextView
            android:id="@+id/internal_legend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/legend_text_color"
            app:layout_constraintTop_toBottomOf="@id/internal_storage_chart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Suchen-Button -->
        <Button
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_button"
            android:backgroundTint="@color/dark_blue"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/internal_legend"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"
            android:padding="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- USB-Stick-Überschrift (unsichtbar bei Start) -->
    <TextView
        android:id="@+id/usb_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/usb_label"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/internal_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- USB PieChart (unsichtbar bei Start, kleiner) -->
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/usb_storage_chart"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/usb_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Legende für USB -->
    <TextView
        android:id="@+id/usb_legend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/legend_text_color"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/usb_storage_chart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Auswerfen-Button (unsichtbar bei Start) -->
    <Button
        android:id="@+id/eject_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/eject_button"
        android:backgroundTint="@color/dark_blue"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/usb_legend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:padding="8dp" />

    <!-- Kein USB-Nachricht -->
    <TextView
        android:id="@+id/no_usb_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_usb_message"
        android:textSize="16sp"
        android:textColor="@color/text_color"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/internal_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>